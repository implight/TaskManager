{
  "Database": {
    "ConnectionStringTemplate": "Host={HOST};Port={PORT};Database={DB};Username={USER};Password={PWD}"
  },

  "Jwt": {
    "Issuer": "TaskManager",
    "Audience": "TaskManager.WebApi",
    "ExpirationMinutes": 60
  },
  
  "ApiVersioning": {
    "DefaultVersion": "1.0",
    "AssumeDefaultVersionWhenUnspecified": true
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Warning"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Filters.Expressions" ],
    "MinimumLevel": "Debug",
    "Filter": [
      {
        "Name": "ByExcluding",
        "Args": {
          "expression": "StartsWith(SourceContext, 'Microsoft.') or StartsWith(SourceContext, 'IdentityServer4')"
        }
      }
    ],
    "Properties": {
      "tm_appname": "TaskManager.WebAPI"
    },
    "WriteTo": [],
    "WriteTo:Async": {
      "Name": "Async",
      "Args": {
        "configure": [
          {
            "Name": "Console",
            "Args": {
              "outputTemplate": "[{ThreadId}] [{Timestamp:HH:mm:ss.ff} {Level:u3}] {Message:lj} {SourceContext} {Properties}{NewLine}{Exception}",
              "formatter": "Serilog.Formatting.Json.JsonFormatter"
            }
          },
          {
            "Name": "RollingFile",
            "Args": {
              "outputTemplate": "[{ThreadId}] [{Timestamp:HH:mm:ss.ff} {Level:u3}] {Message:lj} {Properties} {SourceContext} {NewLine}{Exception}",
              "pathFormat": "%BASEDIR%\\TM-{Date}.log",
              "buffered": "false",
              "shared": "false",
              "retainedFileCountLimit": 10
            }
          },
          {
            "Name": "RollingFile",
            "Args": {
              "restrictedToMinimumLevel": "Error",
              "outputTemplate": "[{ThreadId}] [{Timestamp:HH:mm:ss.ff} {Level:u3}] {Message:lj} {Properties} {SourceContext} {NewLine}{Exception}",
              "pathFormat": "%BASEDIR%\\TM-Error-{Date}.log",
              "buffered": "false",
              "shared": "false",
              "retainedFileCountLimit": 10
            }
          }
        ]
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "AllowedHosts": "*"
}